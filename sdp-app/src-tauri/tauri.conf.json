    },
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "binaries/sdp-api",
          "cmd": "binaries/sdp-api",
          "args": true,
          "sidecar": true
        },
        {
          "name": "run-backend",
          "cmd": "C:\\Users\\EmanueleDeFeo\\Documents\\Projects\\Synapse-Data-Platform\\sdp-app\\src-tauri\\binaries\\sdp-api-x86_64-pc-windows-msvc.exe",
