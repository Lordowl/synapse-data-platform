{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cruscotto Operativo",
  "version": "0.2.4",
  "identifier": "com.synapse.dataplatform",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Cruscotto Operativo",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "devtools": true
      },
      
      {
        "label": "sharepoint-viewer",
        "url": "about:blank",
        "title": "Visualizzatore SharePoint",
        "width": 1100,
        "height": 800,
        "decorations": true,
        "visible": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/sdp-api"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
  "https://github.com/Lordowl/synapse-data-updates/releases/latest/download/latest.json"
],
