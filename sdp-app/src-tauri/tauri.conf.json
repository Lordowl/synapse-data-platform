{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Synapse Data Platform",
  "version": "0.1.0",
  "identifier": "com.synapse.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {"label": "main",
        "title": "Synapse Data Platform",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720
      },
      {
        "label": "sharepoint-viewer",
        "url": "about:blank",
        "title": "Visualizzatore SharePoint",
        "width": 1100,
        "height": 800,
        "decorations": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
