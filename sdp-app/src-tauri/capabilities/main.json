{
  "$schema": "../schemas/capability.json",
  "identifier": "main-capability",
  "description": "Permessi per le funzionalita principali.",
  "windows": [
    "main"
  ],
  "permissions": [
    "app:default",
    "menu:default",
    "tray:default",
    "window:default",
    "webview:default",
    "event:default",
    "path:default",
    "resources:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://127.0.0.1:8000/*"
        }
      ]
    }
  ]
}